<!-- views/edit_todo.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Tarea</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-color: #9998b0;
            color: #fff;
            font-family: Arial, sans-serif;
        }
        .container {
            background-color: #000000;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            min-height: 600px;
        }
        
        .form-control, .btn {
            border-radius: 5px;
        }
        .list-group-item {
            background-color: #0056b3;
            margin-top: 10px;
            padding: 15px;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #fff;
        }
        .list-group-item:hover {
            background-color: #363499;
        }
        
        .btn {
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
            text-transform: uppercase;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        .text-center {
    text-align: center;
}

    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5 text-center">Editar Tarea</h1>
        
        <form action="/api/v1/todospanel/<%= todo.id %>" method="POST" class="mt-3">
            <div class="form-group">
                <label for="title">TÃ­tulo</label>
                <input type="text" class="form-control" id="title" name="title" value="<%= todo.title %>" required>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="completed" name="completed" <%= todo.completed ? 'checked' : '' %>>
                <label class="form-check-label" for="completed">Completada</label>
            </div>
            <button type="submit" class="btn btn-primary">Actualizar Tarea</button>
        </form>
        
        <a href="/api/v1/todospanel" class="btn btn-secondary mt-3">Cancelar</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
